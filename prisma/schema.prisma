generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model task_backlog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  amount    Float
  details   Json     @default("{}")
  deadline  DateTime? @db.Timestamptz(6)
}


model keyboard_shortcuts {
  id                Int      @id @default(autoincrement())
  keyboard_shortcut String
  time              DateTime @default(now())
}

model notifications {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now()) @db.Timestamptz(6)
  message        String
  title          String
  priority       Int      @default(0) // 0: normal, 1: high, 2: emergency
  acknowledged   Boolean  @default(false)
  acknowledgedAt DateTime? @db.Timestamptz(6)
  escalatedToCall Boolean @default(false)
  lastSentAt     DateTime @default(now()) @db.Timestamptz(6)
  sendCount      Int      @default(0)
  metadata       Json?    @default("{}")
  ackToken       String   @unique @default(cuid()) // Token for URL-based acknowledgment
}

model Link {
  id              Int      @id @default(autoincrement())
  email           String?  @db.VarChar(255)
  project         String   @db.VarChar(255)
  campaign        String   @db.VarChar(255)
  redirect        String   @db.VarChar(255)
  button          String   @db.VarChar(255)
  fbclid          String?  @db.VarChar(255)
  browserType     String   @db.VarChar(255)
  platformType    String   @db.VarChar(255)
  operatingSystem String   @db.VarChar(255)
  ip              String   @db.VarChar(255)
  city            String   @db.VarChar(255)
  country         String   @db.VarChar(255)
  createdAt       DateTime @default(now())
}
